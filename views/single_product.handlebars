<div class="grid-container cell-design cell-clear product-container">
  <div class="grid-x grid-margin-y">
    <div class="cell">{{department_name}} > {{name}}</div>
    <div class="cell small-6">
      <img id="large-product-image" src={{image}} width="350px" height="auto" class="img-responsive">
    </div>
    <div class="cell small-6">
      <h2>{{name}}</h2>
      <h4>{{description}}</h4>
      <h4>{{price}}</h4>
      <div class="grid-x">
        <div class="cell small-3">
          <label>Quantity?
            <input class="user-quantity" type="number" value="1">
            <button type="submit" class="button add-to-cart">Add To Cart</button>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>