<div class="top-bar cell-design">
    <img src="../../images/shopazon-logo.png" class="cell-logo" alt="logo" style="max-height: 100px;">
    <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
            <input type="text" id="searchProduct">
            <input href="#" type="submit" value="submit" id="submitSearch">
            <li>
                <a href="#">Shop</a>
                <ul id="departmentDropDown" class="menu vertical">
                </ul>
            </li>
        </ul>
    </div>
    <div class="top-bar-right">
        <ul class="menu">
            {{#if userLoggedIn}}
            <li><i class='fa fa-user-circle'></i><a id="userName" href="/account"></a></li>
            <li><a id="logOutBtn"> Logout</a></li>
            {{else}}
            <li><a id="loginBtn" data-open="loginModal"><i class='fa fa-lock'></i> LOGIN</a></li>
            <li><a id="registerBtn" data-open="registerModal"><i class="fa fa-user-plus"></i> REGISTER</a></li>
            {{/if}}
            <li><a class="button" id="shoppingCartBtn" href="#"><i class="fa fa-shopping-cart"></i> SHOPPING-CART</a>
            </li>
            <li>
                <p id="cartCount">0</p>
            </li>
        </ul>
    </div>

    <div class="modal-container form-popup" id="loginForm">
        <div class="reveal" id="loginModal" class="padding" data-reveal>
            <form class="log-in-form login">
                <h4 class="text-center">Log in with you email account</h4>
                <label>Email
                    <input type="email" id="loginInputEmail" placeholder="somebody@example.com">
                </label>
                <label>Password
                    <input type="password" id="loginInputPassword" placeholder="Password">
                </label>
                <p id="loginMsg" style="display:inline-block">No Account Yet? Please Sign Up</p><a style="color:blue" id="loginLinkMsg" href="#">here</a>
                <!-- <input id="show-password unmask" type="checkbox"><label for="show-password">Show password</label> -->
                <p><input type="submit" class="button expanded" value="Log in"></input></p>
                <p class="text-center"><a href="#">Forgot your password?</a></p>
            </form>
            <a class="close-button" data-close>×</a>
        </div>
    </div>

    <div class="modal-container form-popup" id="loginForm">
        <div class="reveal" id="registerModal" class="padding" data-reveal>
        <form class="form-container register-form register">
            <h1>Register</h1>
            <div class="form-group">
                <label for="RegisterInputName">Name</label>
                <input type="text" class="form-control" id="RegisterInputName" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="RegisterInputEmail">Email address</label>
                <input type="email" class="form-control" id="RegisterInputEmail" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="RegisterInputPassword">Password</label>
                <input type="password" class="form-control" id="RegisterInputPassword" placeholder="Password">
            </div>
            <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span> <span class="msg"></span>
                    </div>
                    <p id="registerMsg" style="display:inline-block"></p><a style="color:blue" id="linkMsg" href="#"></a>
                    <!-- <input id="show-password unmask" type="checkbox"><label for="show-password">Show password</label> -->
            <p><input type="submit" class="button expanded register-form" value="Register"></input></p>

        </form>
            <a class="close-button" data-close>×</a>
        </div>
    </div>





    <script src="/js/navBar.js"></script>
    <script src="/js/login.js"></script>








   
</div>

